{
    "manifest_version": 3,
    "name": "Threads Following Fixer",
    "version": "1.0",
    "description": "Threadsの表示を自動的に「フォロー中」タブに切り替えて固定します。",
    "permissions": [],
    "host_permissions": [
        "*://*.threads.net/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.threads.net/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}