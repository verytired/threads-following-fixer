{
    "manifest_version": 3,
    "name": "Threads Following Fixer",
    "version": "1.1.0",
    "description": "Threadsの表示を常に「フォロー中」に固定します。",
    "permissions": [],
    "host_permissions": [
        "*://*.threads.net/*",
        "*://*.threads.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.threads.net/*",
                "*://*.threads.com/*"
            ],
            "exclude_matches": [
                "*://*.google.com/*",
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}